{% extends '::base.html.twig' %}

{% block title %}{% block smallTitle %}Welcome!{% endblock %} - Chlorius{% endblock %}

{% block body %}
    {% block header %}
        {% include "ChloriusBundle::header.html.twig" %}
    {% endblock %}
    {% block section %}
        <section class="gamma-container gamma-loading" id="gamma-container">
            {% block main %}{% endblock %}
        </section>
    {% endblock %}
    {% block footer %}
        {% include "ChloriusBundle::footer.html.twig" %}
    {% endblock %}
{% endblock %}



{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/chlorius/css/chlorius2.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/chlorius/css/style.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/chlorius/css/demo.css') }}"/>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/chlorius/js/jquery-1.8.2.min.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/modernizr.custom.70736.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/jquery.masonry.min.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/jquery.history.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/js-url.min.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/jquerypp.custom.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/gamma.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/chlorius.js') }}"></script>
    <script type="text/javascript">

        $(function() {

            var GammaSettings = {
                // order is important!
                viewport : [ {
                    width : 1200,
                    columns : 5
                }, {
                    width : 900,
                    columns : 4
                }, {
                    width : 500,
                    columns : 3
                }, {
                    width : 320,
                    columns : 2
                }, {
                    width : 0,
                    columns : 2
                } ]
            };

            Gamma.init( GammaSettings );

        });

    </script>
{% endblock %}