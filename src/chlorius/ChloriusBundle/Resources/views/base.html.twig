{% extends '::base.html.twig' %}

{% block title %}{% block smallTitle %}Welcome!{% endblock %} - Chlorius{% endblock %}

{% block stylesheets %}
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Gamma Gallery - A Responsive Image Gallery Experiment"/>
    <meta name="keywords" content="html5, responsive, image gallery, masonry, picture, images, sizes, fluid, history api, visibility api"/>
    <meta name="author" content="Codrops"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/chlorius/css/chlorius2.css') }}"/>
{% endblock %}

{% block body %}
    {% block topBar %}
        {% if is_granted('ROLE_USER') %}
            {% include "ChloriusBundle::header.html.twig" %}
        {% endif %}
    {% endblock %}
    <footer>
        {% block footer %}
            {% for message in app.session.flashbag.get('fos_user_success') %}
                <p class="valid">{{ message }}<span onclick="$(this).parent().remove()">X</span></p>
            {% endfor %}
        {% endblock %}
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/chlorius/js/jquery-1.8.2.min.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/jquery.masonry.min.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/jquery.history.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/js-url.min.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/jquerypp.custom.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/gamma.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/chlorius.js') }}"></script>
    <script type="text/javascript">

        $(function() {

            var GammaSettings = {
                // order is important!
                viewport : [ {
                    width : 1200,
                    columns : 5
                }, {
                    width : 900,
                    columns : 4
                }, {
                    width : 500,
                    columns : 3
                }, {
                    width : 320,
                    columns : 2
                }, {
                    width : 0,
                    columns : 2
                } ]
            };

            Gamma.init( GammaSettings );

        });

    </script>
{% endblock %}