{% extends '::base.html.twig' %}

{% block title %}{% block smallTitle %}Welcome!{% endblock %} - chlorius{% endblock %}

{% block stylesheets %}
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Gamma Gallery - A Responsive Image Gallery Experiment"/>
    <meta name="keywords" content="html5, responsive, image gallery, masonry, picture, images, sizes, fluid, history api, visibility api"/>
    <meta name="author" content="Codrops"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/chlorius/css/style.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/chlorius/css/chlorius.css') }}"/>
    <script src="{{ asset('bundles/chlorius/js/modernizr.custom.70736.js') }}"></script>
    <noscript><link rel="stylesheet" type="text/css" href="{{ asset('bundles/chlorius/css/noJS.css') }}"/></noscript>
    <!--[if lte IE 7]><style>.main{display:none;} .support-note .note-ie{display:block;}</style><![endif]-->
{% endblock %}

{% block body %}
<div class="container">
    {% block topBar %}
        <div class="codrops-top clearfix">
            <a href="http://tympanus.net/Tutorials/HeadingSets/">
                <strong>&laquo; Previous Demo: </strong>Heading Set Styling
            </a>
                <span class="right">
                	<a href="http://www.idleformat.com/">Images by Idleformat</a>
                    <a href="http://tympanus.net/codrops/?p=11836">
                        <strong>Back to the Codrops Article &raquo;</strong>
                    </a>
                </span>
        </div>
    {% endblock %}
    <div class="main">
        {% block header %}
        {% endblock %}

        <div class="gamma-container gamma-loading" id="gamma-container">
            {% block content %}
            {% endblock %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script src="{{ asset('bundles/chlorius/js/jquery.masonry.min.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/jquery.history.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/js-url.min.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/jquerypp.custom.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/gamma.js') }}"></script>
    <script src="{{ asset('bundles/chlorius/js/chlorius.js') }}"></script>
    <script type="text/javascript">

        $(function() {

            var GammaSettings = {
                // order is important!
                viewport : [ {
                    width : 1200,
                    columns : 5
                }, {
                    width : 900,
                    columns : 4
                }, {
                    width : 500,
                    columns : 3
                }, {
                    width : 320,
                    columns : 2
                }, {
                    width : 0,
                    columns : 2
                } ]
            };

            Gamma.init( GammaSettings );

        });

    </script>
{% endblock %}